{
  "interactionPatterns": {
    "metadata": {
      "version": "1.0.0",
      "lastUpdated": "2025-01-27",
      "owner": "@ux-researcher-agent",
      "description": "Comprehensive interaction design patterns for DafnckMachine v3.1"
    },
    "gesturePatterns": {
      "touch": {
        "tap": {
          "description": "Single finger tap for primary actions",
          "minTargetSize": "44px",
          "feedback": "Visual highlight + haptic feedback",
          "timing": "Immediate response < 100ms"
        },
        "doubleTap": {
          "description": "Quick succession taps for secondary actions",
          "timing": "< 300ms between taps",
          "feedback": "Distinct visual confirmation",
          "usage": "Zoom, like, favorite actions"
        },
        "longPress": {
          "description": "Extended touch for contextual menus",
          "duration": "500ms minimum",
          "feedback": "Progressive visual indicator + haptic",
          "usage": "Context menus, drag initiation"
        },
        "swipe": {
          "horizontal": {
            "description": "Left/right navigation and actions",
            "minDistance": "50px",
            "velocity": "Minimum 0.5px/ms",
            "usage": "Card dismissal, navigation, pagination"
          },
          "vertical": {
            "description": "Up/down scrolling and refresh",
            "minDistance": "30px",
            "usage": "Scroll, pull-to-refresh, drawer reveal"
          }
        },
        "pinch": {
          "description": "Two-finger zoom and scale operations",
          "minScale": "0.5x",
          "maxScale": "3.0x",
          "feedback": "Real-time scale preview"
        }
      },
      "mouse": {
        "click": {
          "description": "Primary selection and activation",
          "feedback": "Visual state change + cursor feedback",
          "timing": "< 100ms response"
        },
        "doubleClick": {
          "description": "Quick edit or detailed view",
          "timing": "< 400ms between clicks",
          "usage": "Edit mode, expand details"
        },
        "rightClick": {
          "description": "Context menu activation",
          "feedback": "Context menu appearance",
          "fallback": "Long press equivalent on touch"
        },
        "hover": {
          "description": "Preview and additional information",
          "timing": "300ms delay before activation",
          "feedback": "Subtle visual enhancement",
          "usage": "Tooltips, previews, button states"
        },
        "drag": {
          "description": "Move and reorder operations",
          "feedback": "Visual drag indicator + ghost element",
          "constraints": "Defined drop zones and boundaries"
        }
      },
      "keyboard": {
        "shortcuts": {
          "global": {
            "search": "Ctrl/Cmd + K",
            "help": "?",
            "navigation": "Arrow keys",
            "selection": "Space/Enter",
            "escape": "Esc"
          },
          "contextual": {
            "save": "Ctrl/Cmd + S",
            "copy": "Ctrl/Cmd + C",
            "paste": "Ctrl/Cmd + V",
            "undo": "Ctrl/Cmd + Z",
            "redo": "Ctrl/Cmd + Shift + Z"
          }
        },
        "navigation": {
          "tab": "Sequential focus movement",
          "shiftTab": "Reverse focus movement",
          "arrow": "Directional navigation within components",
          "home": "Move to beginning",
          "end": "Move to end"
        }
      }
    },
    "animationSpecifications": {
      "transitions": {
        "pageTransition": {
          "duration": "300ms",
          "easing": "cubic-bezier(0.4, 0.0, 0.2, 1)",
          "properties": ["opacity", "transform"],
          "direction": "slide-in from right"
        },
        "modalTransition": {
          "duration": "200ms",
          "easing": "ease-out",
          "properties": ["opacity", "scale"],
          "backdrop": "fade-in 150ms"
        },
        "drawerTransition": {
          "duration": "250ms",
          "easing": "cubic-bezier(0.0, 0.0, 0.2, 1)",
          "properties": ["transform"],
          "direction": "slide-in from edge"
        }
      },
      "microInteractions": {
        "buttonPress": {
          "duration": "150ms",
          "easing": "ease-in-out",
          "scale": "0.95",
          "feedback": "immediate"
        },
        "cardHover": {
          "duration": "200ms",
          "easing": "ease-out",
          "elevation": "4px shadow",
          "scale": "1.02"
        },
        "inputFocus": {
          "duration": "150ms",
          "easing": "ease-out",
          "properties": ["border-color", "box-shadow"],
          "indicator": "2px outline"
        },
        "loadingSpinner": {
          "duration": "1000ms",
          "easing": "linear",
          "rotation": "360deg",
          "infinite": true
        }
      },
      "stateTransitions": {
        "loading": {
          "enter": "fade-in 150ms",
          "exit": "fade-out 100ms",
          "skeleton": "pulse animation 1.5s infinite"
        },
        "error": {
          "enter": "slide-down 200ms + shake 300ms",
          "exit": "fade-out 150ms",
          "color": "error red with fade"
        },
        "success": {
          "enter": "scale-in 200ms + checkmark draw",
          "exit": "fade-out 2000ms",
          "color": "success green"
        }
      }
    },
