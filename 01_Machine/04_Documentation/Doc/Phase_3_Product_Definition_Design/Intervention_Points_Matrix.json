      "validation_criteria": [
        "Clear project scope defined",
        "Platform requirements specified",
        "Constraints identified",
        "Success criteria established"
      ]
    },
    "2_architecture_approval": {
      "phase": "Phase 3 - Product Definition & Design",
      "intervention_type": "REQUIRED",
      "duration_minutes": 5,
      "frequency": "Once per project",
      "description": "Technical architecture and technology stack approval",
      "user_inputs": [
        "Architecture approval/rejection",
        "Technology stack confirmation",
        "Alternative preferences (if rejected)"
      ],
      "automation_after": "Autonomous development pipeline setup and implementation",
      "responsible_agent": "@system-architect-agent",
      "validation_criteria": [
        "Architecture meets requirements",
        "Technology choices approved",
        "Scalability considerations addressed",
        "Security requirements satisfied"
      ]
    },
    "3_design_direction": {
      "phase": "Phase 3 - Product Definition & Design",
      "intervention_type": "REQUIRED",
      "duration_minutes": 10,
      "frequency": "Once per project",
      "description": "Design system and visual direction validation",
      "user_inputs": [
        "Design direction approval",
        "Brand preferences",
        "Color scheme selection",
        "UI/UX style preferences"
      ],
      "automation_after": "Complete autonomous design system generation and implementation",
      "responsible_agent": "@ui-designer-agent",
      "validation_criteria": [
        "Design aligns with brand vision",
        "User experience meets expectations",
        "Accessibility standards confirmed",
        "Cross-platform consistency validated"
      ]
    },
    "4_deployment_authorization": {
      "phase": "Phase 5 - Deployment & Post-Launch",
      "intervention_type": "REQUIRED",
      "duration_minutes": 5,
      "frequency": "Once per deployment",
      "description": "Production deployment authorization and final review",
      "user_inputs": [
        "Deployment authorization",
        "Production environment confirmation",
        "Go-live timing approval"
      ],
      "automation_after": "Autonomous deployment, monitoring, and optimization",
      "responsible_agent": "@devops-agent",
      "validation_criteria": [
        "All quality gates passed",
        "Security validation complete",
        "Performance benchmarks met",
        "Rollback procedures confirmed"
      ]
    }
  },
  "optional_intervention_points": {
    "feature_priority_adjustment": {
      "intervention_type": "OPTIONAL",
      "duration_minutes": 3,
      "frequency": "As needed during development",
