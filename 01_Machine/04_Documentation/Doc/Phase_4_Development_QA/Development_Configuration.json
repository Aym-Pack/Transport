{
  "environment": "development",
  "version": "3.1.0",
  "lastUpdated": "2025-01-27",
  "relatedWorkflow": "12_Frontend_Development.md",
  
  "developmentServer": {
    "port": 3000,
    "host": "localhost",
    "https": false,
    "hot": true,
    "liveReload": true,
    "open": true,
    "overlay": {
      "warnings": true,
      "errors": true
    },
    "historyApiFallback": true,
    "compress": true,
    "allowedHosts": ["localhost", "127.0.0.1", "0.0.0.0"]
  },
  
  "buildConfiguration": {
    "mode": "development",
    "devtool": "eval-source-map",
    "optimization": {
      "minimize": false,
      "splitChunks": false,
      "runtimeChunk": false
    },
    "cache": {
      "type": "memory"
    },
    "watchOptions": {
      "ignored": ["node_modules/**"],
      "poll": false,
      "aggregateTimeout": 300
    }
  },
  
  "environmentVariables": {
    "NODE_ENV": "development",
    "REACT_APP_API_BASE_URL": "http://localhost:8000",
    "REACT_APP_API_VERSION": "v1",
    "REACT_APP_ENABLE_DEBUG": "true",
    "REACT_APP_ENABLE_ANALYTICS": "false",
    "REACT_APP_ENABLE_HOT_RELOAD": "true",
    "REACT_APP_LOG_LEVEL": "debug"
  },
  
  "dependencies": {
    "packageManager": "npm",
    "nodeVersion": ">=18.0.0",
    "npmVersion": ">=8.0.0",
    "installCommand": "npm install",
    "updateCommand": "npm update",
    "auditCommand": "npm audit"
  },
  
  "linting": {
    "eslint": {
      "enabled": true,
      "configFile": ".eslintrc.js",
      "extensions": [".js", ".jsx", ".ts", ".tsx"],
      "cache": true,
      "fix": true
    },
    "prettier": {
      "enabled": true,
      "configFile": ".prettierrc",
      "extensions": [".js", ".jsx", ".ts", ".tsx", ".css", ".scss", ".json", ".md"]
    },
    "stylelint": {
      "enabled": true,
      "configFile": ".stylelintrc.js",
      "extensions": [".css", ".scss", ".sass"]
    }
  },
  
  "testing": {
    "framework": "jest",
    "testEnvironment": "jsdom",
    "setupFiles": ["<rootDir>/src/setupTests.js"],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/index.js",
      "!src/serviceWorker.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "watchMode": true,
    "verbose": true
  },
  
  "debugging": {
    "sourceMap": true,
    "devtools": true,
    "reactDevTools": true,
    "reduxDevTools": true,
    "errorOverlay": true,
    "consoleLogging": true,
    "performanceMonitoring": false
  },
  
  "proxy": {
    "enabled": true,
    "target": "http://localhost:8000",
    "changeOrigin": true,
    "pathRewrite": {
      "^/api": "/api"
    },
    "logLevel": "debug"
  },
  
  "fileWatching": {
    "enabled": true,
    "watchedExtensions": [".js", ".jsx", ".ts", ".tsx", ".css", ".scss", ".json"],
    "ignoredPaths": [
      "node_modules",
      "dist",
      "build",
      ".git",
      "coverage"
    ],
    "polling": false,
    "aggregateTimeout": 300
  },
  
  "performance": {
    "hints": "warning",
    "maxAssetSize": 250000,
    "maxEntrypointSize": 250000,
    "assetFilter": "function(assetFilename) { return assetFilename.endsWith('.js'); }"
  },
  
  "security": {
    "contentSecurityPolicy": false,
    "httpsRedirect": false,
    "secureHeaders": false,
    "vulnerabilityScanning": true
  },
  
  "logging": {
    "level": "debug",
    "format": "detailed",
    "colors": true,
    "timestamp": true,
    "logToFile": false,
    "logFile": "development.log"
  },
  
  "features": {
    "hotModuleReplacement": true,
    "fastRefresh": true,
    "errorBoundary": true,
    "progressBar": true,
    "bundleAnalyzer": false,
    "duplicatePackageChecker": true
  }
} 