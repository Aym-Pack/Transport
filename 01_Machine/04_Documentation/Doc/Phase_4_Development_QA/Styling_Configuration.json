{
  "configType": "styling_configuration",
  "version": "3.1.0",
  "lastUpdated": "2025-01-27",
  "relatedWorkflow": "12_Frontend_Development.md",
  
  "stylingFramework": {
    "primary": "Tailwind CSS",
    "version": "3.2.0",
    "configFile": "tailwind.config.js",
    "customization": {
      "enabled": true,
      "theme": "extended",
      "plugins": ["@tailwindcss/forms", "@tailwindcss/typography", "@tailwindcss/aspect-ratio"]
    }
  },
  
  "cssPreprocessor": {
    "type": "SCSS",
    "version": "1.57.0",
    "features": {
      "variables": true,
      "mixins": true,
      "nesting": true,
      "partials": true,
      "functions": true
    },
    "architecture": {
      "methodology": "7-1 pattern",
      "structure": {
        "abstracts": ["variables", "functions", "mixins", "placeholders"],
        "base": ["reset", "typography"],
        "components": ["buttons", "carousel", "cover", "dropdown"],
        "layout": ["navigation", "grid", "header", "footer", "sidebar", "forms"],
        "pages": ["home", "contact", "about"],
        "themes": ["theme", "admin"],
        "vendors": ["normalize", "bootstrap", "jquery-ui"]
      }
    }
  },
  
  "cssModules": {
    "enabled": true,
    "localIdentName": "[name]__[local]___[hash:base64:5]",
    "camelCase": true,
    "namedExport": false,
    "exportGlobals": false
  },
  
  "designTokens": {
    "colors": {
      "primary": {
        "50": "#eff6ff",
        "100": "#dbeafe",
        "200": "#bfdbfe",
        "300": "#93c5fd",
        "400": "#60a5fa",
        "500": "#3b82f6",
        "600": "#2563eb",
        "700": "#1d4ed8",
        "800": "#1e40af",
        "900": "#1e3a8a"
      },
      "secondary": {
        "50": "#f8fafc",
        "100": "#f1f5f9",
        "200": "#e2e8f0",
        "300": "#cbd5e1",
        "400": "#94a3b8",
        "500": "#64748b",
        "600": "#475569",
        "700": "#334155",
        "800": "#1e293b",
        "900": "#0f172a"
      },
      "accent": {
        "50": "#fdf4ff",
        "100": "#fae8ff",
        "200": "#f5d0fe",
        "300": "#f0abfc",
        "400": "#e879f9",
        "500": "#d946ef",
        "600": "#c026d3",
        "700": "#a21caf",
        "800": "#86198f",
        "900": "#701a75"
      },
      "neutral": {
        "50": "#fafafa",
        "100": "#f5f5f5",
        "200": "#e5e5e5",
        "300": "#d4d4d4",
        "400": "#a3a3a3",
        "500": "#737373",
        "600": "#525252",
        "700": "#404040",
        "800": "#262626",
        "900": "#171717"
      },
      "semantic": {
        "success": "#10b981",
        "warning": "#f59e0b",
        "error": "#ef4444",
        "info": "#3b82f6"
      }
    },
    "typography": {
      "fontFamily": {
        "sans": ["Inter", "ui-sans-serif", "system-ui"],
        "serif": ["ui-serif", "Georgia"],
        "mono": ["ui-monospace", "SFMono-Regular"]
      },
      "fontSize": {
        "xs": ["0.75rem", { "lineHeight": "1rem" }],
        "sm": ["0.875rem", { "lineHeight": "1.25rem" }],
        "base": ["1rem", { "lineHeight": "1.5rem" }],
        "lg": ["1.125rem", { "lineHeight": "1.75rem" }],
        "xl": ["1.25rem", { "lineHeight": "1.75rem" }],
        "2xl": ["1.5rem", { "lineHeight": "2rem" }],
        "3xl": ["1.875rem", { "lineHeight": "2.25rem" }],
        "4xl": ["2.25rem", { "lineHeight": "2.5rem" }],
        "5xl": ["3rem", { "lineHeight": "1" }],
        "6xl": ["3.75rem", { "lineHeight": "1" }]
      },
      "fontWeight": {
        "thin": "100",
        "extralight": "200",
        "light": "300",
        "normal": "400",
        "medium": "500",
        "semibold": "600",
        "bold": "700",
        "extrabold": "800",
        "black": "900"
      }
    },
    "spacing": {
      "0": "0px",
      "1": "0.25rem",
      "2": "0.5rem",
      "3": "0.75rem",
      "4": "1rem",
      "5": "1.25rem",
      "6": "1.5rem",
      "8": "2rem",
      "10": "2.5rem",
      "12": "3rem",
      "16": "4rem",
      "20": "5rem",
      "24": "6rem",
      "32": "8rem",
      "40": "10rem",
      "48": "12rem",
      "56": "14rem",
      "64": "16rem"
    },
    "borderRadius": {
      "none": "0px",
      "sm": "0.125rem",
      "DEFAULT": "0.25rem",
      "md": "0.375rem",
      "lg": "0.5rem",
      "xl": "0.75rem",
      "2xl": "1rem",
      "3xl": "1.5rem",
      "full": "9999px"
    },
    "shadows": {
      "sm": "0 1px 2px 0 rgb(0 0 0 / 0.05)",
      "DEFAULT": "0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1)",
      "md": "0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1)",
      "lg": "0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1)",
      "xl": "0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1)",
      "2xl": "0 25px 50px -12px rgb(0 0 0 / 0.25)",
      "inner": "inset 0 2px 4px 0 rgb(0 0 0 / 0.05)",
      "none": "0 0 #0000"
    }
  },
  
  "responsiveDesign": {
    "breakpoints": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px",
      "2xl": "1536px"
    },
    "approach": "mobile-first",
    "containerMaxWidths": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px",
      "2xl": "1536px"
    }
  },
  
  "themeConfiguration": {
    "darkMode": {
      "enabled": true,
      "strategy": "class",
      "selector": ".dark",
      "toggle": "manual"
    },
    "lightMode": {
      "enabled": true,
      "default": true
    },
    "systemPreference": {
      "enabled": true,
      "respectUserChoice": true
    }
  },
  
  "componentStyling": {
    "buttons": {
      "variants": ["primary", "secondary", "outline", "ghost", "link"],
      "sizes": ["sm", "md", "lg", "xl"],
      "states": ["default", "hover", "active", "disabled", "loading"]
    },
    "inputs": {
      "variants": ["default", "filled", "outline"],
      "sizes": ["sm", "md", "lg"],
      "states": ["default", "focus", "error", "disabled"]
    },
    "cards": {
      "variants": ["default", "outlined", "elevated"],
      "padding": ["sm", "md", "lg"],
      "radius": ["sm", "md", "lg", "xl"]
    }
  },
  
  "animations": {
    "transitions": {
      "duration": {
        "75": "75ms",
        "100": "100ms",
        "150": "150ms",
        "200": "200ms",
        "300": "300ms",
        "500": "500ms",
        "700": "700ms",
        "1000": "1000ms"
      },
      "timingFunction": {
        "linear": "linear",
        "in": "cubic-bezier(0.4, 0, 1, 1)",
        "out": "cubic-bezier(0, 0, 0.2, 1)",
        "in-out": "cubic-bezier(0.4, 0, 0.2, 1)"
      }
    },
    "keyframes": {
      "fadeIn": {
        "0%": { "opacity": "0" },
        "100%": { "opacity": "1" }
      },
      "slideIn": {
        "0%": { "transform": "translateX(-100%)" },
        "100%": { "transform": "translateX(0)" }
      },
      "bounce": {
        "0%, 100%": { "transform": "translateY(-25%)", "animationTimingFunction": "cubic-bezier(0.8,0,1,1)" },
        "50%": { "transform": "none", "animationTimingFunction": "cubic-bezier(0,0,0.2,1)" }
      }
    }
  },
  
  "accessibility": {
    "colorContrast": {
      "minimum": "4.5:1",
      "enhanced": "7:1",
      "testing": "automated"
    },
    "focusIndicators": {
      "visible": true,
      "style": "outline",
      "color": "primary-500",
      "width": "2px"
    },
    "reducedMotion": {
      "respectPreference": true,
      "fallback": "no-animation"
    }
  },
  
  "buildConfiguration": {
    "postCSS": {
      "enabled": true,
      "plugins": [
        "tailwindcss",
        "autoprefixer",
        "cssnano"
      ]
    },
    "purgeCSS": {
      "enabled": true,
      "content": ["./src/**/*.{js,jsx,ts,tsx}", "./public/index.html"],
      "safelist": ["dark"]
    },
    "optimization": {
      "minification": true,
      "compression": true,
      "criticalCSS": true
    }
  },
  
  "linting": {
    "stylelint": {
      "enabled": true,
      "configFile": ".stylelintrc.js",
      "rules": {
        "order/properties-alphabetical-order": true,
        "declaration-block-trailing-semicolon": "always",
        "indentation": 2
      }
    },
    "prettier": {
      "enabled": true,
      "printWidth": 80,
      "tabWidth": 2,
      "useTabs": false
    }
  },
  
  "performance": {
    "criticalCSS": {
      "enabled": true,
      "inline": true,
      "threshold": "14KB"
    },
    "lazyLoading": {
      "enabled": true,
      "strategy": "route-based"
    },
    "caching": {
      "enabled": true,
      "strategy": "content-hash"
    }
  },
  
  "documentation": {
    "storybook": {
      "enabled": true,
      "addons": ["@storybook/addon-docs", "@storybook/addon-controls"]
    },
    "styleGuide": {
      "enabled": true,
      "generator": "storybook",
      "includeTokens": true
    }
  }
} 